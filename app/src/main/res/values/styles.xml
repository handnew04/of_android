<?xml version="1.0" encoding="utf-8"?>
<resources>

   <style name="Toolbar">
      <item name="android:background">@color/gray_700</item>
      <item name="android:layout_height">@dimen/toolbar_height</item>
      <item name="android:layout_width">match_parent</item>
   </style>

   <style name="Button">
      <item name="android:layout_height">@dimen/button_height</item>
   </style>

   <style name="Button.Full">
      <item name="android:layout_width">0dp</item>
   </style>

   <style name="Button.Full.Green">
      <item name="android:background">@drawable/shape_button_green</item>
   </style>

   <style name="Button.Full.Gray">
      <item name="android:background">@drawable/shape_button_gray</item>
   </style>

   <style name="Button.Stroke">
      <item name="android:layout_width">0dp</item>
      <item name="android:background">@drawable/shape_button_stroke</item>
   </style>
</resources>