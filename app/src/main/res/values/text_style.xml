<?xml version="1.0" encoding="utf-8"?>
<resources>

   <style name="Font" />

   <style name="Font.Black">
      <item name="android:textColor">@color/black</item>
   </style>

   <style name="Font.Blue">
      <item name="android:textColor">@color/blue_500</item>
   </style>

   <style name="Font.Red">
      <item name="android:textColor">@color/red_500</item>
   </style>

   <style name="Font.Green">
      <item name="android:textColor">@color/green_500</item>
   </style>

   <style name="Font.White">
      <item name="android:textColor">@color/white</item>
   </style>

   <style name="Font.Gray">
      <item name="android:textColor">@color/gray_600</item>
   </style>

   <style name="Font.DarkGray">
      <item name="android:textColor">@color/gray_700</item>
   </style>

   <style name="Font.Title" parent="Font.Black">
      <item name="android:textStyle">bold</item>
   </style>

   <style name="Font.Title.Display5">
      <item name="android:textSize">40sp</item>
   </style>

   <style name="Font.Title.Display4">
      <item name="android:textSize">36sp</item>
   </style>

   <style name="Font.Title.Display3">
      <item name="android:textSize">32sp</item>
   </style>

   <style name="Font.Title.Display2">
      <item name="android:textSize">28sp</item>
   </style>

   <style name="Font.Title.Display1">
      <item name="android:textSize">24sp</item>
   </style>

   <style name="Font.Title.Headline">
      <item name="android:textSize">20sp</item>
   </style>

   <style name="Font.Title.Subhead3">
      <item name="android:textSize">16sp</item>
   </style>

   <style name="Font.Title.Subhead2">
      <item name="android:textSize">14sp</item>
   </style>

   <style name="Font.Title.Subhead1">
      <item name="android:textSize">12sp</item>
   </style>

   <style name="Font.Body"/>

   <style name="Font.Body2">
      <item name="android:textSize">16sp</item>
   </style>

   <style name="Font.Body1">
      <item name="android:textSize">14sp</item>
   </style>

   <style name="Font.Body.Caption">
      <item name="android:textSize">12sp</item>
   </style>

   <style name="Font.Body.Badge">
      <item name="android:textSize">10sp</item>
   </style>
</resources>